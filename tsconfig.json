{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2019",
        "jsx": "react-jsx",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "rootDir": "./",
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "noUnusedParameters": true,
        "paths": {
            "react-use-snack": [
                "packages/react-use-snack/src"
            ],
            "react-use-snack/*": [
                "packages/react-use-snack/src/*"
            ]
        }
    },
    "exclude": [
        "**/build/",
        "**/node_modules/"
    ]
}
